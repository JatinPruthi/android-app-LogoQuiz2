<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projects.jatin.logoquiz2.Activities.PlayOffline">

    <LinearLayout
        android:background="@color/exit"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


<!--
                <TextView
                    android:id="@+id/showScore"
                    android:gravity="center"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/play"
                    android:layout_marginTop="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"/>
-->

            </LinearLayout>


            <Button
                android:id="@+id/info"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/exit"
                android:text="INFO"
                android:onClick="info"
                android:textSize="20sp"
                android:gravity="right|center"
                android:textColor="@color/play"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGO QUIZ!"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/info"
                android:layout_marginRight="@dimen/_30sdp"
                android:textColor="@color/colorAccent"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:gravity="center"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SCORE"
                    android:textStyle="bold"
                    android:textColor="@color/play"
                    android:layout_marginTop="12sp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/showScore"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/play"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

</LinearLayout>

                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textHiScore"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="HI-SCORE"
                        android:textStyle="bold"
                        android:textColor="@color/play"
                        android:layout_marginTop="12sp"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/showHiScore"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/play"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <ImageView
                    android:background="@android:color/transparent"
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            />

                </RelativeLayout>


                <GridView
            android:id="@+id/gridViewAnswer"
            android:layout_margin="@dimen/_10sdp"
            android:padding="4dp"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:columnWidth="40dp"
            android:numColumns="auto_fit"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>

        <GridView
            android:id="@+id/gridViewSuggest"
            android:layout_margin="@dimen/_10sdp"
            android:padding="4dp"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:columnWidth="40dp"
            android:numColumns="auto_fit"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>

    </LinearLayout>
</ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/exit"
        android:textColor="@color/play"
        android:textSize="30sp"
        android:text="Submit"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
